<div ng-show="screen === 'orders'" class="px-6 py-8">
<div class="max-w-4xl mx-auto">
<div class="bg-white rounded-3xl p-8 mb-5">
<h1 class="text-xl font-bold mb-10">Orders ({{orders.length | number}})</h1>



<div class="overflow-x-auto">
<table class="min-w-full divide-y-2 divide-gray-200 bg-white text-sm">
<thead class="ltr:text-left rtl:text-right">
<tr>
<th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">Names</th>
<th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">Phone</th>
<th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">Services</th>
<th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">Total</th>
<th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">Date</th>
<th class="px-4 py-2"></th>
</tr>
</thead>

<tbody class="divide-y divide-gray-200">
<tr ng-repeat="x in orders">
<td class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">{{x.names}}<br>{{x.email}}</td>
<td class="whitespace-nowrap px-4 py-2 text-gray-700">{{x.phone}}</td>
<td class="whitespace-nowrap flex items-center flex-wrap gap-4 px-4 py-2 text-gray-700">

<span ng-repeat="y in x.cart" class="whitespace-nowrap rounded-full bg-purple-100 px-2.5 py-0.5 text-sm text-purple-700">
  {{y.name | limitTo:10}}{{y.name.length > 10?'...':null}}
</span>

</td>
<td class="whitespace-nowrap px-4 py-2 text-gray-700">${{x.total | number}}</td>
<td class="whitespace-nowrap px-4 py-2 text-gray-700">{{x.dateCreated | date}}</td>
<td class="whitespace-nowrap px-4 py-2">
<a
ng-click="setValue('selectedOrder',x)" onclick="toggleModalSeeOrder()"
href="javascript:void(0)"
class="inline-block rounded bg-indigo-600 px-4 py-2 text-xs font-medium text-white hover:bg-indigo-700"
>
View
</a>
</td>
</tr>

</tbody>
</table>
</div>


</div>
</div>
</div>