<div id="addcoupon" class="fixed top-0 left-0 w-full h-full flex items-center justify-center hidden" style="background-color: rgb(0, 0, 0, .6);">



<div class="bg-white w-[60%] h-auto p-6 rounded-xl relative">

<!-- close button -->
<div onclick="toggleModalAddCoupon()" class="absolute h-8 w-8 top-[-10%] right-[-5%] rounded-full bg-white flex items-center justify-center cursor-pointer">x</div>

<!-- details of the order -->


<div class="max-w-xl lg:max-w-3xl">
<div class="relative block">
<h1 class="mt-2 text-lg font-bold text-gray-900 sm:text-xl md:text-2xl flex items-center justify-between">
<span>Add Coupon</span> 
</h1>
</div>



<form ng-submit="addCoupon()" class="mt-8 grid grid-cols-6 gap-6">
<div class="col-span-9">
<label for="FirstName" class="block text-sm font-medium text-gray-700">
Code
</label>

<input
type="text"
id="code"
name="code"
ng-model="coupon.code"
required
class="mt-1 w-full  border-gray-700 bg-gray-100 p-2 text-sm text-gray-700 shadow-sm"
/>
</div>

<div class="col-span-3 sm:col-span-3">
<label for="LastName" class="block text-sm font-medium text-gray-700">
Coupon type
</label>

<select 
ng-model="coupon.type"
required
class="mt-1 w-full  border-gray-700 bg-gray-100 p-2 text-sm text-gray-700 shadow-sm">
<option value="">Select a type</option>
<option value="amount">Amount</option>
<option value="percentage">Percentage</option>
</select>
</div>

<div class="col-span-3 sm:col-span-3">
<label for="LastName" class="block text-sm font-medium text-gray-700">
Value
</label>

<input
type="number"
id="value"
name="value"
ng-model="coupon.value"
placeholder="Coupon Value"
required
class="mt-1 w-full  border-gray-700 bg-gray-100 p-2 text-sm text-gray-700 shadow-sm"
/>
</div>




<div class="col-span-6 mt-6 sm:flex sm:items-center sm:gap-4">
<button
type="submit"
class="inline-block shrink-0  border border-blue-600 bg-blue-600 px-12 py-3 text-sm font-medium text-white transition hover:bg-transparent hover:text-blue-600 focus:outline-none focus:ring active:text-blue-500"
>
Create Coupon
</button>

<p class="mt-4 text-sm text-gray-500 sm:mt-0">
<a onclick="toggleModalAddCoupon()" ng-click="setValue('coupon',undefined)" href="javascript:void(0)" class="text-gray-700 underline">CANCEL</a>
</p>
</div>
</form>



</div>

</div>


	
</div>